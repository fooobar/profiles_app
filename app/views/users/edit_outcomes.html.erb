<div class="profile-content" style="
	background-image: url(<%=@user.background%>); 
	background-repeat: no-repeat; 
	background-color: <%=@user.color%>">
<!-- SIDE NAV -->

	<div class="outcomes profile-side-nav" data="<%=@user.id%>">

	<!-- Image -->

		<div class="prof-image-div" >
		<a class="image-edit-button" id="profile-image-edit-button" href="">Edit</a>
		<br>
			<img class="profile-image" src="<%=@user.image_src%>">
			
			
			<!-- edit form -->
			<div class="edit-form" id="profile-image-edit">
				<%= form_for @user do |f| %>
					<%= f.text_field :image_src %>
					<%= f.submit 'Update', class: "image-update-button update-button" %>
				<% end %>
			</div>
		</div>

	<!-- Contact Links -->

		<div class="profile-contact">
		<a class="edit-button" id="profile-contact-edit-button" href="">Edit</a>
		<% if @user.city%><h4><%=@user.city%><%end%><% if @user.state%>, <%=@user.state%><%end%></h4>
			<ul>
				<li><%=@user.l_name%> <%=@user.f_name%> </li>
				<li><a href="mailto:<%=@user.email%>">Your Email</a></li>
			</ul>
			<!-- edit form -->
			<div class="edit-form" id="profile-contact-edit">
				<%= form_for @user do |f| %>
					<%= label_tag(:website, "Website link") %>
					<br>
					<%= f.text_field :website %>
					<br>
					<%= label_tag(:f_name, "First Name") %>
					<br>
					<%= f.text_field :f_name %>
					<br>
					<%= label_tag(:l_name, "Last Name") %>
					<br>
					<%= f.text_field :l_name %>
					<br>
					<%= f.submit 'Update', class: "contact-update-button update-button" %>
				<% end %>
			</div>
		</div>

		<div class="profile-options">
			<h4>Your Preferences </h4>
			<%= form_for @user do |f| %>
				<%= label_tag(:background, "Background Image") %>
				<br>
				<%= f.text_field :background %>
				<br>
				<%= label_tag(:color, " or Background Color") %>
				<br>
				<%= f.text_field :color %>
				<br>
				<%= f.submit 'Update', class: "prefs-update-button update-button" %>
			<% end %>

		</div>


	</div>

	<!-- MAIN AREA -->

	<div class="profile-header profile-main">
		<h1>Outcomes Page</h1>
		<div class="outcome-stats">
			<h2>Students</h2>
			<div class="fleft">
				<h5>We have <%=@students.count%> students:</h5>
				<ul>
					<% @students.each do |student| %>
					<li><a href="/users/<%=student.id%>"><%= student.f_name%> <%= student.l_name %></a> | Viewed: <%= student.clicked %></li>
					<%end%>
				</ul>
			</div>
			<div class="fleft">
				<h5>Top skill search:</h5>
				<ul>
					<% @skillsStudents.each do |skill| %>
					<li><%= skill.name%> | Clicked on: <%= skill.student_clicks%></li>
					<%end%>
				</ul>
			</div>
		</div>

		<div class="clear-row"></div>

		<div class="outcome-stats">
			<h2>Employers</h2>
			<div class="fleft">
				<h5>We have <%=@employers.count%> employers:</h5>
				<ul>
					<% @employers.each do |employer| %>
					<li><a href="/users/<%=employer.id%>"><%= employer.org_name%></a> | Viewed: <%= employer.clicked %></li>
					<%end%>
				</ul>
			</div>
			<div class="fleft">
				<h5>Top skill search:</h5>
				<ul>
					<% @skillsEmployers.each do |skill| %>
					<li><%= skill.name%> | Clicked on: <%= skill.employer_clicks%></li>
					<%end%>
				</ul>
			</div>
		</div>
	</div>

</div>
