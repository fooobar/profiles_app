<div class="profile-content" style="
	background-image: url(<%=@user.background%>); 
	background-repeat: no-repeat; 
	background-color: <%=@user.color%>">
<!-- SIDE NAV -->

	<div class="profile-side-nav" data="<%=@user.id%>">

	<!-- Image -->

		<div class="profile-image">
			<img class="profile-image" src="<%=@user.image_src%>">
			<br>
			<a class="image-edit-button" id="profile-image-edit-button" href="">Edit Image</a>
			<!-- edit form -->
			<div class="edit-form" id="profile-image-edit">
				<%= form_for @user do |f| %>
					<%= f.text_field :image_src %>
					<%= f.submit 'Update', class: "image-update-button" %>
				<% end %>
			</div>
		</div>

	<!-- Contact Links -->

		<div class="profile-contact">
		<a class="edit-button" id="profile-contact-edit-button" href="">Edit</a>
		<% if @user.city%><h4><%=@user.city%><%end%><% if @user.state%>, <%=@user.state%><%end%></h4>
			<ul>
				<li><%=@user.f_name%> <%=@user.l_name%></li>
				<li><a href="mailto:<%=@user.email%>">Your Login Email</a></li>
			</ul>
			<!-- edit form -->
			<div class="edit-form" id="profile-contact-edit">
				<%= form_for @user do |f| %>
					<%= label_tag(:website, "Website link") %>
					<br>
					<%= f.text_field :website %>
					<br>
					<%= label_tag(:f_name, "First Name") %>
					<br>
					<%= f.text_field :f_name %>
					<br>
					<%= label_tag(:l_name, "Last Name") %>
					<br>
					<%= f.text_field :l_name %>
					<br>
					<%= f.submit 'Update', class: "contact-update-button" %>
				<% end %>
			</div>
		</div>

	</div>

	<!-- MAIN AREA -->

	<div class="profile-main">
		<h1>Welcome to the Outcomes Page</h1>
		<div class="outcome-stats">
			<h2>Students</h2>
			<p>We have <%=@students.count%> students:</p>
			<ul>
				<% @students.each do |student| %>
				<li><a href="/users/<%=student.id%>"><%= student.f_name%> <%= student.l_name %></a></li>
				<%end%>
			</ul>
		</div>

		<div class="outcome-stats">
			<h2>Employers</h2>
			<p>We have <%=@employers.count%> employers:</p>
			<ul>
				<% @employers.each do |employer| %>
				<li><a href="/users/<%=employer.id%>"><%= employer.org_name%></a></li>
				<%end%>
			</ul>
		</div>
		
		<div class="outcome-stats">
			<h2>Skills</h2>
			<p>We have <%=@skills.count%> skills:</p>
			<ul>
				<% @skills.each do |skill| %>
				<li><%= skill.name%></li>
				<%end%>
			</ul>
		</div>
	</div>

</div>
