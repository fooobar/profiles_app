<!-- SIDE NAV -->

<div class="profile-side-nav" data="<%=@user.id%>">

<!-- Image -->

	<div class="profile-image">
		<img id="profile-image" src="<%=@user.image_src%>">
		<br>
		<a class="edit-button" id="profile-image-edit-button" href="">Edit Image</a>
		<!-- edit form -->
		<div class="hidden" id="profile-image-edit">
			<%= form_for @user do |f| %>
				<%= f.text_field :image_src %>
				<%= f.submit 'Update', id: "image-update-button" %>
			<% end %>
		</div>
	</div>

<!-- Contact Links -->

	<div class="profile-contact">
	<a class="edit-button" id="profile-contact-edit-button" href="">Edit</a>
	<% if @user.city%><h4><%=@user.city%><%end%><% if @user.state%>, <%=@user.state%><%end%></h4>
		<ul>
			<li><a href="mailto:<%=@user.email%>">Email Me</a></li>
			<% if @user.website %><li><a href="<%=@user.website%>">My Website</a></li><%end%>
			<% if @user.twitter %><li><a href="<%=@user.twitter%>">Tweet Me</a></li><%end%>
			<% if @user.github %><li><a href="<%=@user.github%>">GitHub</a></li><%end%>
			
			<% if @user.linkedin %><li><a href="<%=@user.linkedin%>">LinkedIn</a></li><%end%>
			<% if @user.behance%><li><a href="<%=@user.behance%>">Behance</a></li><%end%>
		</ul>
		<!-- edit form -->
		<div class="hidden" id="profile-contact-edit">
			<%= form_for @user do |f| %>
				<%= label_tag(:website, "Website link") %>
				<br>
				<%= f.text_field :website %>
				<br>
				<%= label_tag(:twitter, "Twitter link") %>
				<br>
				<%= f.text_field :twitter %>
				<br>
				<%= label_tag(:github, "Github link") %>
				<br>
				<%= f.text_field :github %>
				<br>
				<%= label_tag(:linkedin, "Linkedin") %>
				<br>
				<%= f.text_field :linkedin %>
				<br>
				<%= label_tag(:behance, "Behance") %>
				<br>
				<%= f.text_field :behance %>
				<br>
				<%= f.submit 'Update', id: "contact-update-button" %>
			<% end %>
		</div>
	</div>

</div>

<!-- MAIN AREA -->

<div class="profile-main">

<!-- User Basic Info -->

	<div class="profile-header">
		<h1><%= @user.f_name%> <%= @user.l_name%></h1>
		<h2><%= @user.role%> </h2>
		<h3><%=@user.bio%></h3>
		<!-- edit form -->
		<div class="hidden" id="profile-header-edit">
			<%= form_for @user do |f| %>
				<%= f.text_field :f_name %>
				<%= f.text_field :l_name %>
				<%= f.text_field :role %>
				<%= f.text_field :bio %>
				<%= f.submit 'Update', id: "header-update-button" %>
			<% end %>
		</div>

	</div>

	<!-- Skills -->

	<div class="profile-skills">
		<h2>Skills</h2>
		<ul>
			<% @user.skills.each do |skill|%>
				<li><%=skill.name%></li><span><a class="delete-button" id="profile-skill-delete-button" href="">Delete</a></span>
			<%end%>
		</ul>
		<!-- edit form -->
		
	</div>

	<!-- Projects -->

	<div class="profile-projects">
		<h2>Projects</h2>
		<% @user.projects.each do |project| %>
			<div class="project" data="<%=project.id%>">
				<img class="project-image" src="<%=project.image_src%>">
				<h3><%= project.title%></h3>
				<p><%= project.desc%></p>
				<a href="<%=project.website%>">Click to Learn More</a>
			</div>
			<!-- edit form -->
			<div class="hidden" id="profile-project-edit">
			<%binding.pry%>
				<%= form_for project do |f| %>
					<%= f.text_field :title %>
					<%= f.text_field :desc %>
					<%= f.text_field :website %>
					<%= f.submit 'Update', id: "project-update-button" %>
				<% end %>
			</div>
		<%end%>
		
	</div>

	<!-- Work Experience -->

	<div class="profile-experiences">
		<h2>Experience</h2>
		<% @user.experiences.each do |exp|%>
			<div class="experience" data="<%=exp.id%>">
				<h3><%=exp.role%></h3>
				<h4><%=exp.company_name%></h4>
				<h5><%=exp.start_date%> &mdash; <%=exp.end_date%> | <%=exp.city%>, <%=exp.state%></h5>
				<p><%= exp.blurb%></p>
			</div>
			<!-- edit form -->
			<div class="hidden" id="profile-experience-edit">
				<%= form_for @user.experiences do |f| %>
					<%= f.text_field :role %>
					<%= f.text_field :company_name %>
					<%= f.date_field :start_date %>
					<%= f.date_field :end_date %>
					<%= f.text_field :city %>
					<%= f.text_field :state %>
					<%= f.text_field :blurb %>
					<%= f.submit 'Update', id: "experience-update-button" %>
				<% end %>
			</div>
		<%end%>
	</div>


</div>