<!-- SIDE NAV -->

<div class="profile-side-nav" data="<%=@user.id%>">

<!-- Image -->

	<div class="profile-image">
		<img class="profile-image" src="<%=@user.image_src%>">
		<br>
		<a class="image-edit-button" id="profile-image-edit-button" href="">Edit Image</a>
		<!-- edit form -->
		<div class="edit-form" id="profile-image-edit">
			<%= form_for @user do |f| %>
				<%= f.text_field :image_src %>
				<%= f.submit 'Update', class: "image-update-button" %>
			<% end %>
		</div>
	</div>

<!-- Contact Links -->

	<div class="profile-contact">
	<a class="edit-button" id="profile-contact-edit-button" href="">Edit</a>
	<% if @user.city%><h4><%=@user.city%><%end%><% if @user.state%>, <%=@user.state%><%end%></h4>
		<ul>
			<li><a href="mailto:<%=@user.email%>">Email Me</a></li>
			<% if @user.website && @user.website != "" %><li><a class="website" href="<%=@user.website%>">My Website</a></li><%end%>
			<% if @user.twitter && @user.twitter != "" %><li><a class="twitter" href="<%=@user.twitter%>">Tweet Me</a></li><%end%>
			<% if @user.github && @user.github != "" %><li><a class="github" href="<%=@user.github%>">GitHub</a></li><%end%>
			<% if @user.linkedin && @user.linkedin != "" %><li><a class="linkedin" href="<%=@user.linkedin%>">LinkedIn</a></li><%end%>
			<% if @user.behance && @user.behance != ""%><li><a class="behance" href="<%=@user.behance%>">Behance</a></li><%end%>
		</ul>
		<!-- edit form -->
		<div class="edit-form" id="profile-contact-edit">
			<%= form_for @user do |f| %>
				<%= label_tag(:website, "Website link") %>
				<br>
				<%= f.text_field :website %>
				<br>
				<%= label_tag(:twitter, "Twitter link") %>
				<br>
				<%= f.text_field :twitter %>
				<br>
				<%= label_tag(:github, "Github link") %>
				<br>
				<%= f.text_field :github %>
				<br>
				<%= label_tag(:linkedin, "Linkedin") %>
				<br>
				<%= f.text_field :linkedin %>
				<br>
				<%= label_tag(:behance, "Behance") %>
				<br>
				<%= f.text_field :behance %>
				<br>
				<%= f.submit 'Update', class: "contact-update-button" %>
			<% end %>
		</div>
	</div>

</div>

<!-- MAIN AREA -->

<div class="profile-main">

<!-- User Basic Info -->

	<div class="profile-header">
		<a class="edit-button" id="profile-header-edit-button" href="">Edit</a>
		<h1><%= @user.f_name%> <%= @user.l_name%></h1>
		<h2><%= @user.role%> </h2>
		<h3><%=@user.bio%></h3>
		<!-- edit form -->
		<div class="edit-form" id="profile-header-edit">
			<%= form_for @user do |f| %>
				<%= label_tag(:f_name, "First Name") %>
				<br>
				<%= f.text_field :f_name %>
				<br>
				<%= label_tag(:l_name, "Last Name") %>
				<br>
				<%= f.text_field :l_name %>
				<br>
				<%= label_tag(:role, "Your Role") %>
				<br>
				<%= f.text_field :role %>
				<br>
				<%= label_tag(:bio, "About You") %>
				<br>
				<%= f.text_field :bio %>
				<br>
				<%= f.submit 'Update', class: "header-update-button" %>
			<% end %>
		</div>

	</div>

	<!-- Skills -->

	<div class="profile-skills">
		<a class="skills-edit-button" id="profile-skills-edit-button" href="">Edit</a>
		<h2>Skills</h2>
		<ul>
			<% @user.skills.each do |skill|%>
				<li><%=skill.name%></li><span><a class="delete-button" href="">Delete</a></span>
			<%end%>
		</ul>
		<!-- edit form -->
		
	</div>

	<!-- Projects -->

	<div class="profile-projects">
		<h2>Projects</h2>
		<% @user.projects.each do |project| %>
			<div class="project" data="<%=project.id%>">
				<a class="edit-button"  href="">Edit</a>
				<br>
				<img class="project-image" src="<%=project.image_src%>">
				<h3><%= project.title%></h3>
				<p><%= project.desc%></p>
				<a href="<%=project.website%>">Click to Learn More</a>
				<!-- edit form -->
				<div class="edit-form" id="profile-project-edit">
					<%= form_for project, url: "/users/#{@user.id}/projects/#{project.id}", html: {method: :patch} do |f| %>
						<%= label_tag(:image_src, "Image Url") %>
						<br>
						<%= f.text_field :image_src %>
						<br>
						<%= label_tag(:title, "Project Title") %>
						<br>
						<%= f.text_field :title %>
						<br>
						<%= label_tag(:desc, "Description") %>
						<br>
						<%= f.text_field :desc %>
						<br>
						<%= label_tag(:website, "Project Website") %>
						<br>
						<%= f.text_field :website %>
						<br>
						<%= f.submit 'Update', class: "project-update-button" %>
					<% end %>
				</div>
			</div>
		<%end%>	
	</div>

	<!-- Work Experience -->

	<div class="profile-experiences">
		<h2>Experience</h2>
		<% @sorted_experiences.each do |exp|%>
			<div class="experience" data="<%=exp.id%>">
				<a class="edit-button" id="profile-experience-edit-button" href="">Edit</a>
				<h3><%=exp.role%></h3>
				<h4><%=exp.company_name%></h4>
				<h5><%=exp.start_date%> &mdash; <%=exp.end_date%> | <%=exp.city%>, <%=exp.state%></h5>
				<p><%= exp.blurb%></p>
				<!-- edit form -->
				<div class="edit-form" id="profile-experience-edit">
					<%= form_for exp, url: "/users/#{@user.id}/experiences/#{exp.id}", html: {method: :patch} do |f| %>
						<%= label_tag(:role, "Role") %>
						<br>
						<%= f.text_field :role %>
						<br>
						<%= label_tag(:company_name, "Company Name") %>
						<br>
						<%= f.text_field :company_name %>
						<br>
						<%= label_tag(:start_date, "Start Date") %>
						<br>
						<%= f.date_field :start_date %>
						<br>
						<%= label_tag(:end_date, "End Date") %>
						<br>
						<%= f.date_field :end_date %>
						<br>
						<%= label_tag(:city, "City") %>
						<br>
						<%= f.text_field :city %>
						<br>
						<%= label_tag(:state, "State") %>
						<br>
						<%= f.text_field :state %>
						<br>
						<%= label_tag(:blurb, "Description") %>
						<br>
						<%= f.text_field :blurb %>
						<br>
						<%= f.submit 'Update', class: "experience-update-button" %>
					<% end %>
				</div>
			</div>	
		<%end%>
	</div>


</div>