<!-- SIDE NAV -->

<div class="profile-side-nav">

	<!-- Image -->
	<div class="profile-image">
		<img src="<%=@user.image_src%>">
		<br>
		<a class="image-edit-button" id="profile-image-edit-button" href="">Edit Image</a>
		<!-- hidden edit form -->
		<div class="hidden" id="profile-image-edit">
			<%= form_for @user do |f| %>
				<%= f.text_field :image_src %>
				<%= f.submit 'Update', class: "image-update-button" %>
			<% end %>
		</div>
	</div>
	<!-- End Image -->

	<!-- User Contact Links -->
	<div class="profile-contact">
	<% if @user.city%><h4><%=@user.city%><%end%>
	<% if @user.state%>, <%=@user.state%><%end%></h4>
		<ul>
			<li><a href="mailto:<%=@user.email%>">Email Me</a></li>
			<% if @user.website %><li><a href="<%=@user.website%>">My Website</a></li><%end%>
			<% if @user.twitter %><li><a href="<%=@user.twitter%>">Tweet Me</a></li><%end%>
			<% if @user.github %><li><a href="<%=@user.github%>">GitHub</a></li><%end%>
			
			<% if @user.linkedin %><li><a href="<%=@user.linkedin%>">LinkedIn</a></li><%end%>
			<% if @user.behance%><li><a href="<%=@user.behance%>">Behance</a></li><%end%>
		</ul>
		<!-- edit form -->
		<div class="hidden" id="profile-contact-edit">
			<%= form_for @user do |f| %>
				<%= label_tag(:website, "Website link") %>
				<br>
				<%= f.text_field :website %>
				<br>
				<%= label_tag(:twitter, "Twitter link") %>
				<br>
				<%= f.text_field :twitter %>
				<br>
				<%= label_tag(:github, "Github link") %>
				<br>
				<%= f.text_field :github %>
				<br>
				<%= label_tag(:linkedin, "Linkedin") %>
				<br>
				<%= f.text_field :linkedin %>
				<br>
				<%= label_tag(:behance, "Behance") %>
				<br>
				<%= f.text_field :behance %>
				<br>
				<%= f.submit 'Update', class: "contact-update-button" %>
			<% end %>
		</div>
	</div>
	<!-- End User Contact Links -->

</div>
<!-- END OF SIDE NAV -->


<!-- MAIN AREA -->
<div class="profile-main">

	<!-- User Basic Info -->
	<div class="profile-header">
		<a class="edit-button" id="profile-header-edit-button" href="">Edit</a>
		<h1><%= @user.org_name%></h1>
		<% if @user.bio%><h2><%= @user.bio%> </h2><%end%>
		<!-- edit form -->
		<div class="hidden" id="profile-header-edit">
			<%= form_for @user do |f| %>
				<%= f.text_field :org_name %>
				<%= f.text_field :bio %>
				<%= f.submit 'Update', class: "header-update-button" %>
			<% end %>
		</div>

	</div>

	<!-- Start Jobs Posted -->
	<div class="profile-jobs">
		<h2>Jobs you are offering</h2>
		<% @user.jobs.each do |job|%>
			<div class="job" data="<%=job.id%>">
				<a class="edit-button" id="profile-job-edit-button" href="">Edit</a>
				<h3><%=job.title%></h3>
				<h5>Created at: <%=job.created_at%></h5>
				<p class="jobDescPreview"><%=job.desc[0..100]%>... <a href="">More</a></p>
				<p class="jobDescAll hidden"><%=job.desc%> <a href="">Less</a></p>
			</div>
			<!-- edit form -->
		<div class="hidden" id="profile-job-edit">
				<%= form_for job, url: "/users/#{@user.id}/jobs/#{job.id}", html: {method: :patch} do |f| %>
					<%= f.text_field :title %>
					<%= f.text_field :desc %>
					<%= f.submit 'Update', class: "job-update-button" %>
				<% end %>
			</div>
		<%end%>
	</div>
	<!-- End Jobs Posted -->

</div>
<!-- END MAIN AREA -->

