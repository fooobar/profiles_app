<!DOCTYPE html>
<html>
<head>
  <title>Profiles</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta charset="UTF-8">
</head>
<body>

<div id="header">
	<%= @current_user ? (@current_user.user_type == 'student' ? 'Hello ' + @current_user.f_name : 'Hello ' + @current_user.org_name) : ''%>
	<% if @current_user%>
		<br>
		<a id="logout" href="/logout">Log Out</a>
	<% end %>
</div>

<%= yield %>

</body>
</html>
